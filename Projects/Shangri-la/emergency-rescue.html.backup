    <script>
        // 平滑滚动和导航高亮
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        // 滚动时导航栏高亮
        window.addEventListener('scroll', () => {
            const sections = document.querySelectorAll('.section-block');
            const navLinks = document.querySelectorAll('.sticky-nav a');
            
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop - 200;
                if (pageYOffset >= sectionTop) {
                    current = section.getAttribute('id');
                }
            });

            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === '#' + current) {
                    link.classList.add('active');
                }
            });
        });

        // 初始化Pannellum全景查看器
        let viewer;
        let isAutoRotating = false;

        window.addEventListener('load', () => {
            console.log('页面加载完成，开始初始化全景查看器');
            try {
                viewer = pannellum.viewer('panorama-viewer', {
                    "type": "equirectangular",
                    "panorama": "images/哈巴雪上营地选址360全景图.jpeg",
                    "autoLoad": true,
                    "autoRotate": 0,
                    "autoRotateInactivityDelay": 3000,
                    "showControls": true,
                    "showFullscreenCtrl": false,
                    "showZoomCtrl": true,
                    "mouseZoom": true,
                    "draggable": true,
                    "friction": 0.15,
                    "hfov": 100,
                    "minHfov": 50,
                    "maxHfov": 120,
                    "pitch": 0,
                    "yaw": 0,
                    "compass": true,
                    "northOffset": 0,
                    "strings": {
                        "loadButtonLabel": "点击加载全景",
                        "loadingLabel": "加载中...",
                        "bylineLabel": "哈巴雪山营地选址360°全景"
                    }
                });
                console.log('全景查看器初始化成功:', viewer);
            } catch (error) {
                console.error('全景查看器初始化失败:', error);
            }
        });

        // 重置视角
        function resetView() {
            if (viewer) {
                viewer.setPitch(0);
                viewer.setYaw(0);
                viewer.setHfov(100);
            }
        }

        // 切换自动旋转
        function toggleAutoRotate() {
            console.log('toggleAutoRotate被调用');
            console.log('viewer对象:', viewer);
            console.log('isAutoRotating状态:', isAutoRotating);
            
            const btn = document.getElementById('autoRotateBtn');
            if (viewer) {
                if (isAutoRotating) {
                    viewer.stopAutoRotate();
                    btn.innerHTML = '<i class="fas fa-play"></i> 自动旋转';
                    isAutoRotating = false;
                    console.log('已停止自动旋转');
                } else {
                    viewer.startAutoRotate(-4);
                    btn.innerHTML = '<i class="fas fa-pause"></i> 停止旋转';
                    isAutoRotating = true;
                    console.log('已开始自动旋转');
                }
            } else {
                console.error('viewer对象未初始化');
                alert('全景查看器尚未加载完成，请稍后再试');
            }
        }

        // 全屏查看
        function toggleFullscreen() {
            if (viewer) {
                viewer.toggleFullscreen();
            }
        }

        // 图片模态框
        function openModal(imageSrc) {
            const modal = document.getElementById('imageModal');
            const modalImg = document.getElementById('modalImage');
            modal.style.display = 'block';
            modalImg.src = imageSrc;
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            const modal = document.getElementById('imageModal');
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // 点击模态框背景关闭
        document.getElementById('imageModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // ESC键关闭模态框
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });

        // 页面加载动画
        window.addEventListener('load', () => {
            document.querySelectorAll('.section-block').forEach((section, index) => {
                section.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
